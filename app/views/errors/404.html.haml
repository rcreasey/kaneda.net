!!!
%html{ "xml:lang" => "en", :lang => "en", :xmlns => "http://www.w3.org/1999/xhtml", :encoding => "ascii-8bit" }
  %head
    %title kaneda.net
    = stylesheet_link_tag 'application'
    = javascript_include_tag 'jquery', 'jtypewriter', 'application'
    
  %body
  %div.prompt#1{:style => 'display: none'}
    %span kaneda.net % 
    %span#2{:style => 'display: none'}= "ls -la #{env['REQUEST_URI']}"
  %pre#3{:style => 'display: none'}= "ls: #{env['REQUEST_URI']}: No such file or directory"
  %div.prompt#4{:style => 'display: none'}
    kaneda.net % 
    %span#cursor &nbsp;

:javascript
  function four(){
    $("#4").show();
    setInterval(blink_closure, 1000);
  }

  function three(){
    $("#3").show();
    setTimeout(four, 1000);
  }

  function two(){
    $("#2").show().jTypeWriter({duration:0.7});
    setTimeout(three, 1000);
  }

  function one(){
    $("#1").show();
    setTimeout(two, 1000);
  }

  $(document).ready(one);